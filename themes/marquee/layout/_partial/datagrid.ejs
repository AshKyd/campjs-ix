<div class="_datagrid">
<% if (data) {
  data.forEach(function(item){ %>
    <div class="card">
      <img class="card-img-top" src="<%- item.image %>" alt="<%= item.name %>">
      <div class="card-body">
        <h3 class="h5">
          <% if(item.link) { %>
            <a href="<%= item.link %>"<%= item.name %></a>
          <% } else { %>
            <%= item.name %>
          <% } %>
        </h3>
        <p><%= item.description %></p>
        <% if(item.twitter) { %>
          <p>Tweet <a href="https://mobile.twitter.com/<%= item.twitter %>">@<%= item.twitter %></a></p>
        <% } %>
        <% if(item.email) { %>
          <p>Email <a href="mailto:<%= item.email %>"><%= item.email %></a>
        <% } %>
      </div>
    </div>
  <% }) %>
<% } %>
</div>
